        .wrapper-left 
            include ./sidebar.pug
        .wrapper-right 
            .wrapper-right_header.d-flex.align-items-center.justify-content-between 
                form.wrapper-right_header--left(action="")
                    .form-group 
                        button
                            img(src="./images/icons/search-gray.svg", alt="")
                        input.form-control(type="text" placeholder='Tìm kiếm task')
